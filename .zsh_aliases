# curl

function cheat() {
  curl https://cheat.sh/$@ | less
}


function curljq() {
  curl_output=$(curl "$1" "$2" 2>/dev/null)
  if [ -z "$3" ]; then
    jq_output=$(echo "$curl_output" | jq '.')
  else
    jq_output=$(echo "$curl_output" | jq "$3")
  fi
  echo "$jq_output"
}


